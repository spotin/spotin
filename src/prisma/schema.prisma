generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SequelizeMeta {
  name String @id @db.VarChar(255)
}

model spatial_ref_sys {
  srid      Int     @id
  auth_name String? @db.VarChar(256)
  auth_srid Int?
  srtext    String? @db.VarChar(2048)
  proj4text String? @db.VarChar(2048)
}

model spots {
  uuid          String                   @id @db.Uuid
  title         String?                  @db.VarChar(255)
  description   String?
  coordinates   Unsupported("geometry")?
  timestamp     DateTime?                @db.Timestamptz(6)
  redirection   String?                  @db.VarChar(255)
  referenced    Boolean?
  user_username String?                  @db.VarChar(255)
  created_at    DateTime                 @db.Timestamptz(6)
  updated_at    DateTime                 @db.Timestamptz(6)
  deleted_at    DateTime?                @db.Timestamptz(6)
  users         users?                   @relation(fields: [user_username], references: [username], onDelete: NoAction, onUpdate: NoAction)
}

model tokens {
  uuid          String    @db.Uuid
  hash          String    @db.VarChar(255)
  name          String?   @db.VarChar(255)
  user_username String?   @db.VarChar(255)
  created_at    DateTime  @db.Timestamptz(6)
  updated_at    DateTime  @db.Timestamptz(6)
  deleted_at    DateTime? @db.Timestamptz(6)
  users         users?    @relation(fields: [user_username], references: [username], onDelete: NoAction, onUpdate: NoAction)

  @@id([uuid, hash])
}

model users {
  username       String    @id @db.VarChar(255)
  email          String?   @db.VarChar(255)
  password       String?   @db.VarChar(255)
  confirmed      Boolean?  @default(false)
  created_at     DateTime  @db.Timestamptz(6)
  updated_at     DateTime  @db.Timestamptz(6)
  deleted_at     DateTime? @db.Timestamptz(6)
  validate_email String?   @db.VarChar(255)
  reset_password String?   @db.VarChar(255)
  spots          spots[]
  tokens         tokens[]

  @@index([reset_password], map: "users_reset_password")
  @@index([validate_email], map: "users_validate_email")
}
