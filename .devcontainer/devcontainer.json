{
  "name": "SpotIn Development Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "runArgs": ["-p=3000:3000"],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "azureDnsAutoDetection": true,
      "version": "latest",
      "dockerDashComposeVersion": "v1"
    }
  },
  "postCreateCommand": "./.devcontainer/npm-global-without-sudo.sh && npm install -g npm@9.4.2",
  "customizations": {
    "vscode": {
      "extensions": [
        "ronnidc.nunjucks",
        "Prisma.prisma",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
