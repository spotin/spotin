{% extends "layout.njk" %}
{% block body %}
  <h1>
    <i class="fas fa-key"></i>
    Token
  </h1>
  <fieldset>
    <label for="name">Name</label>
    <input type="name" name="name" id="name" value="{{ token.name }}" disabled="disabled"/>

    <label for="value">Value</label>
    <input type="value" name="value" id="value" value="The value is displayed only once, right after the creation of the token." disabled="disabled"/>
  </fieldset>
  <a href="/tokens">
    <button>
      <i class="fas fa-list"></i>
      View all tokens
    </button>
  </a>
{% endblock %}
