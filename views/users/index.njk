{% extends "layout.njk" %}
{% block body %}
  <h1>
    <span class="fas fa-users"></span>
    {{ t('ui.users.index.title') }}
  </h1>
  <p class="text-justify">
    {{ t('ui.users.index.paragraphOne') }}
  </p>
  <table>
    <thead>
      <tr>
        <th class="grow">
          {{ t('ui.users.index.username') }}
        </th>
        <th>
          {{ t('ui.users.index.email') }}
        </th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr>
          <td>
            <a href="/users/{{ user.id }}">
              {{ user.username }}
            </a>
          </td>
          <td>
            <a href="mailto:{{ user.email }}">
              {{ user.email }}
            </a>
          </td>
          <td>
            <a href="/users/{{ user.id }}">
              <span class="fas fa-eye"></span>
            </a>
          </td>
          <td>
            <a href="/users/{{ user.id }}/edit">
              <span class="fas fa-pen"></span>
            </a>
          </td>
          <td>
            <a href="/users/{{ user.id }}/delete">
              <span class="fas fa-trash"></span>
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <a href="/users/create" role="button">
    <span class="fas fa-plus-circle"></span>
    {{ t('ui.users.index.button') }}
  </a>
{% endblock %}
