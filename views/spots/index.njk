{% extends "layout.njk" %}
{% block body %}
  <h1>
    <span class="fas fa-map-marker-alt"></span>
    {{ t('ui.spots.index.title') }}
  </h1>
  <p class="text-justify">
    {{ t('ui.spots.index.paragraphOne') }}
  </p>
  <table>
    <thead>
      <tr>
        <th class="grow">
          {{ t('ui.spots.index.name') }}
        </th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for spot in spots %}
        <tr>
          <td>
            {% if spot.name %}
              <a href="/spots/{{ spot.id }}">
                {{ spot.name }}
              </a>
            {% else %}
              <a href="/spots/{{ spot.id }}" class="secondary text-italic">
                {{ t('ui.spots.index.noName') }}
              </a>
            {% endif %}
          </td>
          <td>
            <a href="/spots/{{ spot.id }}">
              <span class="fas fa-eye"></span>
            </a>
          </td>
          <td>
            <a href="/spots/{{ spot.id }}/edit">
              <span class="fas fa-pen"></span>
            </a>
          </td>
          <td>
            <a href="/spots/{{ spot.id }}/delete">
              <span class="fas fa-trash"></span>
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <p>
    <a href="/spots/create" role="button">
      <span class="fas fa-plus-circle"></span>
      {{ t('ui.spots.index.button') }}
    </a>
  </p>
{% endblock %}
